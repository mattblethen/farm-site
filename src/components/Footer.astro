---
const year = new Date().getFullYear();
const SITE = {
  name: "Pine Ridge Beef",
  phone: "(859) 555-0123",
  email: "hello@pineridgebeef.com",
  address: "123 Farm Lane, Richmond, KY 40475",
};
---

<footer class="border-t border-black/5 bg-white" role="contentinfo" aria-label="Site footer">
  <div class="mx-auto max-w-[1200px] px-4 md:px-6 py-8 text-sm text-black/80">
    <div class="flex flex-col md:flex-row gap-4 md:items-center md:justify-between">
      <address class="not-italic">
        <strong>{SITE.name}</strong> — {SITE.address}
      </address>

      <nav aria-label="Contact">
        <ul class="flex gap-4">
          <li>
            <a
              class="hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-[#2F5D46]/60 rounded"
              href={`tel:${SITE.phone.replace(/[^0-9]/g, "")}`}
            >
              {SITE.phone}
            </a>
          </li>
          <li>
            <a
              class="hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-[#2F5D46]/60 rounded"
              href={`mailto:${SITE.email}`}
            >
              {SITE.email}
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Increased contrast from /50 → /60 to meet WCAG AA for small text on white -->
    <div class="mt-4 text-xs text-black/60">© {year} {SITE.name}. All rights reserved.</div>
  </div>
</footer>

<style>
  footer { margin-top: 20px; }
  /* Ensure visible focus even if Tailwind resets are minimal */
  :where(footer) a:focus-visible {
    outline: 2px solid #2F5D46;
    outline-offset: 2px;
  }
</style>
